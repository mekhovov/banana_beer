<div class="container">


  <% if @page.slug == 'home' %>
    <!-- recent posts -->
    <%= render partial: 'home/recent_posts' %>
  <% end %>

  <% if params[:preview] %>
    <div class="alert alert-info" role="alert">
      Currently viewing a preview of "<%= @page.title %>".
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <%= @page.content.html_safe %>
    </div>
  </div>
</div>