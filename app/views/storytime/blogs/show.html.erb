<% content_for :head, auto_discovery_link_tag(:atom, action: :show, id: @page.id, format: "atom") %>

<div class="section section-blog">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="card card_content">
          <div class="post-list">
            <%= render @posts %>
            <%= paginate @posts, param_name: "page_number" %>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card card_content">
          <h5>
            <%= t('defaults.tags') %>
          </h5>
          <ul class="tags">
            <% tag_cloud Storytime::Post.tag_counts, %w[s m l] do |tag, css_class| %>
              <li class="tag">
                <span class='label label-primary background-color-<%= tag_color(tag.name) %>'>
                  <%= link_to tag.name, storytime.blog_path(@page, tag: tag.name), class: css_class %>
                </span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>

    </div>
  </div>
</div>