<% content_for :head, auto_discovery_link_tag(:atom, action: :show, id: @page.id, format: "atom") %>

<div class="section section-blog">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="card card_content">
          <div class="post-list">
            <%= render @posts %>
            <%= paginate @posts, param_name: "page_number" %>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card card_content">
          <%= render partial: '/shared/all_tags' %>
        </div>
      </div>

    </div>
  </div>
</div>