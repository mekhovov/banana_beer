<header>
  <nav class="navbar navbar-transparent navbar-absolute" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to @current_storytime_site.title, "/", class: "navbar-brand" %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <%#= render Storytime::Navigation.find_by(handle: "main") %>
          <% Storytime::Page.published.each do |page| %>
            <li><%= link_to page.title, storytime.page_path(page) %></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to "#{t 'layout.subscribe_to', site_name: @current_storytime_site.title}", "#", data: {target: "#addSubscriptionModal", toggle: "modal"} %>
          </li>

          <!-- Search -->
          <li>
            <%= form_tag '/blog', method: 'get', class: 'navbar-form navbar-left', role: 'search' do %>
              <div class="form-group">
                <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control"%>
                <%= button_tag(type: "submit", class: "search_nav_button") do %>
                  <i class="glyphicon glyphicon-search"></i>
                <% end %>
              </div>
            <% end %>
          </li>

          <% if user_signed_in? %>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign In", Storytime.login_path %></li>
          <% end %>

        </ul>
      </div>
    </div>
  </nav>
</header>
<%= render partial: "storytime/subscriptions/modal" %>
