<%= render partial: 'home/recent_posts' %>

<div class="section section-gray section-<%= @page.slug %>">
  <div class="container">
    <% if params[:preview] %>
      <div class="alert alert-info" role="alert">
        Currently viewing a preview of "<%= @page&.title %>".
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-12">
        <%= @page&.content.try(:html_safe) %>
      </div>
    </div>
  </div>
</div>

